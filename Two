    <script>
        function roundToCent(value) {
            return Math.round(value * 100) / 100;
        }
        
        function formatCurrency(value) {
            if (isNaN(value) || value === null || value === '') return '';
            return '$' + value.toFixed(2);
        }
        
        function parseCurrency(str) {
            return parseFloat(str.replace(/[^0-9.-]/g, '')) || 0;
        }
        
        function calculate() {
            const A1 = parseCurrency(document.getElementById('A1').value);
            const B1 = parseCurrency(document.getElementById('B1').value);
            const C1 = parseCurrency(document.getElementById('C1').value);
            const D1 = parseCurrency(document.getElementById('D1').value);

            const rate = parseFloat(document.getElementById('increaseRate').value);
            const multiplier = 1 + rate;

            // Column A – selected escalator
            let A = [A1];
            for (let i = 1; i < 6; i++) A[i] = roundToCent(A[i-1] * multiplier);

            // Column B – flat
            let B = new Array(6).fill(B1);

            // Column C – 1.99%
            let C = [C1];
            for (let i = 1; i < 6; i++) C[i] = roundToCent(C[i-1] * 1.0199);

            // Column D – 2.99%
            let D = [D1];
            for (let i = 1; i < 6; i++) D[i] = roundToCent(D[i-1] * 1.0299);

            // Write all 6 years
            for (let i = 1; i <= 6; i++) {
                document.getElementById('A' + i).value = formatCurrency(A[i-1]);
                document.getElementById('B' + i).value = formatCurrency(B[i-1]);
                document.getElementById('C' + i).value = formatCurrency(C[i-1]);
                document.getElementById('D' + i).value = formatCurrency(D[i-1]);
            }
        }

        // Run once when page loads
        window.onload = calculate;
    </script>
